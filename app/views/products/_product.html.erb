<div class="col-md-3 product-men">
  <div class="men-pro-item simpleCart_shelfItem">
    <div class="men-thumb-item">
      <%= image_tag("a8.png", class: "pro-image-front") %>
      <%= image_tag("a8.png", class: "pro-image-back") %>
      <div class="men-cart-pro">
        <div class="inner-men-cart-pro">
          <%= link_to t("page.view"), product_path(product), method: :get, class: "link-product-add-cart"%>
        </div>
      </div>
      <span class="product-new-top"><%= t "page.new" %></span>
    </div>
    <div class="item-info-product ">
      <h4><%= link_to product.name, product_path(product), method: :get %></h4>
      <div class="info-product-price">
        <span class="item_price"><%= number_to_currency product.price %></span>
      </div>
      <a href="#" class="item_add single-item hvr-outline-out button2"><%= t "product.add_cart" %></a>
    </div>
  </div>
</div>
