
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :patch,class: "container animate"}) do |f| %>
  <div class="containerr">
    <%= render "shared/error_messages", object: f.object %>

    <%= f.hidden_field :reset_password_token %>

    <%= f.label :password %>
    <%= f.password_field :password, class: "form_login", placeholder: t("password.placeholder"), required: true  %>

    <%= f.label :password_confirmation, t("password.confirmation") %>
    <%= f.password_field :password_confirmation, class: "form_login", placeholder: t("password.confirm_placeholder"), required: true  %>

    <%= f.submit t("form.submit"), class: "button_login" %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
