
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {class: "container animate"}) do |f| %>
<div class="containerr">
    <%= render "shared/error_messages", object: f.object %>

    <%= f.label :email %>
    <%= f.email_field :email, class: "form_login", placeholder: t("email.placeholder"), required: true  %>

    <%= f.submit t("form.submit"), class: "button_login" %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
