<div class="header page_head">
  <div class="container">
    <ul>
      <li><span class="glyphicon glyphicon-time" aria-hidden="true"></span><%= t "header.one_title" %></li>
      <li><span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span><%= t "header.second_title" %></li>
      <li><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span><a href="mailto:info@example.com"><%= t "header.third_title" %></a></li>
    </ul>
  </div>
</div>
<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
  <!-- Brand -->
  <%= link_to t("page.base_title"), root_path, id: "logo", class: "navbar-brand" %>
  <%= form_with url: search_static_pages_path, method: :get, class: "form-inline form_search" do |f| %>
    <%= f.text_field :search, class: "form-control mr-sm-2", placeholder: t("page.search") %>
    <%= f.submit t("page.search"), class: "btn btn-success" %>
  <% end %>
  <!-- Links -->
  <ul class="navbar-nav">
    <li class="nav-item">
    <%= link_to t("page.home"), root_path, class: "nav-link"  %>
    </li>
    <li class="nav-item">
      <%= link_to t("product.recently"), recently_products_path, class: "nav-link"%>
    </li>
    <!-- Dropdown -->
    <li class="nav-item dropdown">
      <a class="nav-link dropdown-toggle" href="#" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <%= t "page.languagee" %>
      </a>
      <div class="dropdown-menu aria-labelledby="dropdownMenuLink"">
        <%= link_to t("page.language.eng"), locale:"en"%>
        <%= link_to t("page.language.vie"), locale:"vi"%>
      </div>
    </li>
    <% if log_in? %>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <i class="fas fa-user-check"> </i>
        </a>
        <div class="dropdown-menu drop_head aria-labelledby="dropdownMenuLink"">
          <%= link_to t("user.orders"), orders_path, class: "dropdown-item"%>
          <% if check_admin? %>
            <%= link_to t("user.manage"), admin_orders_path, class: "dropdown-item"%>
          <% end %>
          <%= link_to t("user.logout"), session_path(current_user), method: :delete, class: "dropdown-item"%>
        </div>
      </li>
    <% else %>
      <li class="nav-item"><%= link_to t("user.login"), new_session_path, class: "nav-link"%></li>
    <% end %>
  </ul>
  <div id="ex4">
    <%= render "layouts/cart_text" %>
  </div>
</nav>
