<div class="men-wear">
  <div class="container">
    <div class="col-md-3 products-left">
      <div class="css-treeview">
        <h4><%= t "category.name" %></h4>
        <ul class="tree-list-pad">
          <% if @categories.empty? %>
            <h3><%= t "category.empty" %></h3>
          <% else %>
            <%= render @categories %>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="col-md-9 products-right">
      <h5><%= t "product.list" %></h5>
      <div class="sort-grid">
        <div class="sorting">
          <h6><%= t "page.sort_by" %></h6>
          <select id="country1" onchange="change_country(this.value)" class="frm-field required sect">
            <option value="null"><%= t "page.default" %></option>
            <option value="null"><% t "page.sort.name_asc" %></option>
            <option value="null"><% t "page.sort.name_desc" %></option>
            <option value="null"><% t "page.sort.price_asc" %></option>
            <option value="null"><% t "page.sort.price_desc" %></option>
          </select>
          <div class="clearfix"></div>
        </div>
        <div class="sorting">
          <h6><%= t "product.price" %></h6>
          <select id="country2" onchange="change_country(this.value)" class="frm-field required sect">
            <option value="null"><%=t "product.one" %></option>
            <option value="null"><%=t "product.two" %></option>
            <option value="null"><%=t "product.three" %></option>
            <option value="null"><%=t "product.four" %></option>
          </select>
          <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
      </div>
    </div>
    <% if @products.any? %>
      <%= render @products %>
      <div class="col-md-12 pagination-grid text-center">
        <%= will_paginate @products %>
      </div>
    <% else %>
      <h3><%= t "product.empty" %></h3>
    <% end %>
  </div>
</div>
